<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/item_tuijian_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_tuijian_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tuijian_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="爱神巧克力"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/item_tuijian_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tuijian_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="第1话"
            android:textColor="#666"/>

        <TextView
            android:id="@+id/item_tuijian_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/item_tuijian_number"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_bgm_fav"
            android:text="5"
            android:textColor="#666"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>