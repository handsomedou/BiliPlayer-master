<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingLeft="6dp"
              android:paddingRight="6dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wanjie_iv_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/wanjie_01"/>

            <TextView
                android:id="@+id/wanjie_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:lines="2"
                android:text="恶棍之家 第六季"
                android:textColor="@color/bili_color_black"/>

            <TextView
                android:id="@+id/wanjie_tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="12话全"
                android:textColor="#666"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/wanjie_iv_icon2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/wanjie_01"/>

            <TextView
                android:id="@+id/wanjie_tv_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:lines="2"
                android:text="恶棍之家 第六季"
                android:textColor="@color/bili_color_black"/>

            <TextView
                android:id="@+id/wanjie_tv_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="12话全"
                android:textColor="#666"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/wanjie_iv_icon3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/wanjie_01"/>

            <TextView
                android:id="@+id/wanjie_tv_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:lines="2"
                android:text="恶棍之家 第六季"
                android:textColor="@color/bili_color_black"/>

            <TextView
                android:id="@+id/wanjie_tv_number3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="12话全"
                android:textColor="#666"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>